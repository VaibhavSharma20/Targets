<%- include("header") -%>

    <div class="boxx" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="boxx">
        <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="items">
                <input type="checkbox" name="checkBox" value="<%= item._id %>" onChange="this.form.submit()"> </input>
                <p>
                    <%= item.name %>
                </p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
        <% }) %>
    
                <form class="items" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button class="submit-button" type="submit" name="list" value="<%=listTitle %>">+</button>
                </form>
    
    </div>
    
<%- include("footer") -%>
  